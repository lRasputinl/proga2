<Window x:Class="proga2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proga2"
        mc:Ignorable="d"
        Title="MainWindow" Height="475" Width="300" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Height="475" HorizontalAlignment="Center" VerticalAlignment="Top" Width="300" RenderTransformOrigin="0.5,0.5" Margin="0,-16,0,0" Background="#FF48CAE4">
        <Button Name="btn_1" Content="1" HorizontalAlignment="Left" Margin="0,325,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_1_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_2" Content="2" HorizontalAlignment="Left" Margin="75,325,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_2_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_3" Content="3" HorizontalAlignment="Left" Margin="150,325,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_3_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_plus" Content="+" HorizontalAlignment="Left" Margin="225,325,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_plus_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_4" Content="4" HorizontalAlignment="Left" Margin="0,250,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_4_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_5" Content="5" HorizontalAlignment="Left" Margin="75,250,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_5_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_6" Content="6" HorizontalAlignment="Left" Margin="150,250,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_6_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_minus" Content="-" HorizontalAlignment="Left" Margin="225,250,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_minus_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_7" Content="7" HorizontalAlignment="Left" Margin="0,175,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_7_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_8" Content="8" HorizontalAlignment="Left" Margin="75,175,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_8_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_9" Content="9" HorizontalAlignment="Left" Margin="150,175,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_9_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_multiply" Content="*" HorizontalAlignment="Left" Margin="225,175,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_multiply_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_clear" Content="C" HorizontalAlignment="Left" Margin="0,100,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_clear_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_procent" Content="%" HorizontalAlignment="Left" Margin="75,100,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_procent_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_changeSign" Content="+/-" HorizontalAlignment="Left" Margin="150,100,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_changeSign_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_division" Content="/" HorizontalAlignment="Left" Margin="225,100,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_division_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_0" Content="0" HorizontalAlignment="Left" Margin="0,400,0,0" VerticalAlignment="Top" Width="150" Height="75" FontSize="30" Click="btn_0_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_dot" Content="," HorizontalAlignment="Left" Margin="150,400,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_dot_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <Button Name="btn_equal" Content="=" HorizontalAlignment="Left" Margin="225,400,0,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="30" Click="btn_equal_Click" Background="#FF00B4D8" BorderBrush="#FF0096C7"/>
        <TextBlock Name="Field" HorizontalAlignment="Right" Height="70" Margin="0,16,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="300" FontSize="50" TextAlignment="Right" Padding="0,0,5,0"/>

    </Grid>
</Window>
